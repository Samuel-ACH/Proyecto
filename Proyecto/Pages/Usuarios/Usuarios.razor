@page "/Usuario"

<h3>Lista de Usuarios</h3>

<div class"form-group row">
    <div class="col-sm-2">
        <a href="/Usuarios/Nuevo" class="btn btn-primary">Nuevo Usuario</a>
    </div>
</div>

@if (usuariosLista == null)
{
    <div class="spinner"></div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>IdUsuario</th>
                <th>NombreUsuario</th>
                <th>Rol</th>
                <th>Esta Activo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in usuariosLista)
            {
                <tr>
                    <td>@user.IdUsuario</td>
                    <td>@user.NombreUsuario</td>
                    <td>@user.Rol</td>
                    <td>
                        @if(@user.EstaActivo)
                        {
                            <span class="oi oi-circle-check" style="color:green;"></span>
                        }
                        else
                        {
                            <span class="oi oi-circle-x" style="color:red;"></span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-success" href="@($"/Usuarios/Editar/{user.IdUsuario}")">Editar</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}



	