@page "/Usuarios/Editar/{IdUsuario}"

<EditForm Model="@user">
    <DataAnnotationsValidator />
    <h3>Editar Usuario</h3>
    <hr />

    <div class="form-group row">
        <label for="IdUsuario" class="col-sm-2 col-form-label">
            IdUsuario
        </label>
        <div class="col-sm-10">
            <InputText id="IdUsuario" class="form-control" placeholder="IdUsuario" @bind-Value="user.IdUsuario" />
            <ValidationMessage For="@(() => user.IdUsuario)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="NombreUsuario" class="col-sm-2 col-form-label">
            NombreUsuario
        </label>
        <div class="col-sm-10">
            <InputText id="NombreUsuario" class="form-control" placeholder="NombreUsuario" @bind-Value="user.NombreUsuario" />
            <ValidationMessage For="@(() => user.NombreUsuario)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Contraseña" class="col-sm-2 col-form-label">
            Contraseña
        </label>
        <div class="col-sm-10">
            <InputText id="Contraseña" class="form-control" placeholder="Contraseña" @bind-Value="user.Contraseña" type="password" />
            <ValidationMessage For="@(() => user.Contraseña)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="EstaActivo" class="col-sm-2 col-form-label">
            Esta Activo
        </label>
        <div class="col-sm-10">
            <InputCheckbox @bind-Value="user.EstaActivo" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Rol" class="col-sm-2 col-form-label">
            Rol
        </label>
        <div class="col-sm-10">
            <InputSelect class="form-control" @bind-Value="user.Rol">
                @foreach (var rol in Enum.GetValues(typeof(Roles)))
                {
                    <option> value="@rol">@rol</option>
                }
            </InputSelect>
            <ValidationMessage For="@(() => user.Rol)" />
        </div>
    </div>

    <div class="form-group row">
        <p>
            <input type="submit" class="btn-toolbar btn-primary" value="Guardar" @onclick="Guardar" />
            <input type="submit" class="btn-toolbar btn-danger" value="Cancelar" @onclick="Cancelar" />
            <input type="submit" class="btn-toolbar btn-warning" value="Eliminar" @onclick="Eliminar" />
        </p>
    </div>


</EditForm>



